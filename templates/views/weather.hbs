    <!-- Main header -->
    <header>
      <div class="container-fluid main_header weathers">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
              <form action="" class="temp_form form-group">
                {{! <label for="cityName">City Name</label> }}
                <input
                  type="text"
                  id="cityName"
                  placeholder="Enter city name"
                  autocomplete="off"
                />
                <input type="submit" value="search" id="submitBtn" />
              </form>
            </div>
            <div class="tempInfo">
              <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="date">26 feb</p>
              </div>

              <div class="main_layer">
                {{! <hr id="separate" /> }}
                <p id="city_name">Get output here</p>
                <div class="middle_layer data_hide">
                  <p id="temp"><span id="temp_span">0</span><sup>o</sup>C</p>
                  <p id="temp_status"><i
                      class="fa fa-cloud"
                      style="color: rgb(238, 255, 0);"
                    ></i></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
